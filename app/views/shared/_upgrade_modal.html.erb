<%
features = [
  'Connect a custom domain',
  'Add custom code, like analytics',
  'Unlimited views and subscribers',
  'Integrations + API (coming soon)'
]
%>

<div
  data-upgrade-target="container"
  data-action="click->upgrade#closeBackground keyup@window->upgrade#closeWithKeyboard"
  class="hidden animated fadeIn fixed inset-0 overflow-y-auto flex items-center justify-center bg-gray-100 min-h-screen min-w-screen" style="z-index: 40;">
  <!-- Modal Inner Container -->
  <div class="mx-auto max-w-lg overflow-hidden rounded-lg shadow-lg lg:flex lg:max-w-none">
    <div class="flex-1 bg-white px-6 py-8 lg:p-12">
      <h3 class="text-2xl font-bold text-gray-900 sm:text-3xl sm:tracking-tight">Subscribe to Postcard to connect your domain</h3>
      <!--<p class="mt-6 text-base text-gray-600">
        Subscribe before connecting a custom domain. If you need to buy a domain, you can do that separately after subscribing.
      </p>-->
      <div class="mt-8">
        <div class="flex items-center">
          <h4 class="flex-shrink-0 bg-white pr-4 text-base font-semibold text-indigo-600">What's included</h4>
          <div class="flex-1 border-t-2 border-gray-200"></div>
        </div>
        <ul role="list" class="mt-8 space-y-5 lg:grid lg:grid-cols-2 lg:gap-x-8 lg:gap-y-5 lg:space-y-0">
          <% features.each do |feature| %>
            <li class="flex items-start lg:col-span-1">
              <div class="flex-shrink-0">
                <%= heroicon 'check-circle', class: 'h-5 w-5 text-accent', variant: :mini %>
              </div>
              <p class="ml-3 text-sm text-gray-700"><%= feature %></p>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="bg-gray-050 py-8 px-6 text-center lg:flex lg:flex-shrink-0 lg:flex-col lg:justify-center lg:p-12">
      <!--
      <p class="text-lg font-medium leading-6 text-gray-900">Postcard Premium</p>
      -->
      <div class="mt-4 flex items-end justify-center text-5xl font-bold tracking-tight text-gray-900">
        <span>$4</span>
        <span class="ml-3 text-xl font-medium tracking-normal text-gray-600">/mo</span>
      </div>
      <!--
      <p class="mt-4 text-sm">
        <a href="#" class="font-medium text-gray-600 underline">Learn about our membership policy</a>
      </p>
      -->
      <div class="mt-6">
        <a class="btn btn-primary w-full" data-upgrade-target="checkout" data-turbo="false" href="#">
          Subscribe â†’
        </a>
      </div>
      <div class="mt-4 text-sm">
        <button class="font-normal underline text-gray-600" data-action="click->upgrade#close">
          I'll do this later
        </button>
      </div>
    </div>
  </div>
</div>
