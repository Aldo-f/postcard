    <!--FACEBOOK ICON-->
    <a
      href="http://www.facebook.com/sharer.php?u=<%= url %>"
      target="_blank"
      rel="noopener noreferrer"
      class="border hover:bg-[#1877f2] w-12 h-12 fill-[#1877f2] hover:fill-white border-gray-075 rounded-full flex items-center justify-center"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
      >
        <path
          d="M13.397 20.997v-8.196h2.765l.411-3.209h-3.176V7.548c0-.926.258-1.56 1.587-1.56h1.684V3.127A22.336 22.336 0 0 0 14.201 3c-2.444 0-4.122 1.492-4.122 4.231v2.355H7.332v3.209h2.753v8.202h3.312z"
        ></path>
      </svg>
    </a>

    <!--EMAIL ICON-->
    <a
      href="mailto:?<% if defined?(subject) && subject %>subject=<%= subject %>&<% end %>body=<%= url %>"
      class="border hover:bg-[#1e43fc] w-12 h-12 text-[#1e43fc] hover:text-white border-gray-075 rounded-full flex items-center justify-center"
    >
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" height="24" width="24">
        <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
      </svg>
    </a>
  </div>

  <button
    class="flex items-center w-full py-4 mt-4 border rounded-md cursor-pointer bg-gray-025 border-gray-075"
    data-clipboard-text="<%= url %>"
    data-controller="copy"
    data-copy-template-id-value="share-flash-tmpl"
    >
    <div class="px-4 text-xs text-left text-gray-800 break-all truncate border-0 grow bg-gray-025">
      <%= url %>
    </div>

    <div class="flex flex-row items-center px-4 space-x-1 text-sm font-medium no-underline text-tertiary">
      <%= heroicon "clipboard", class: "inline h-4 w-4" %>
      <span>Copy</span>
    </div>
  </button>
</div>

