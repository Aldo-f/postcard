<% content_for :content do %>
  <div class="min-h-full flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
      <div>
        <div class="mb-6 mx-auto flex justify-center">
          <% if @account&.id && @account.photo.attached? %>
            <%# Intentionally no link to avoid redirecting logged-in users to unintentional places %>
            <%= render "shared/square_picture_variants", picture: @account.photo, size: 144, classes: "h-16 w-16 rounded-full shadow-lg", alt: @account.name %>
          <% else %>
            <a href="/"><img class="h-8 w-auto" src="<%= asset_path("logo/icon.svg") %>" alt="Postcard"></a>
          <% end %>
        </div>
        <h1 class="text-center text-3xl font-semibold text-gray-925"><%= yield(:heading) %></h1>
        <% if content_for?(:subheading) %>
          <p class="mt-2 text-center text-sm text-gray-600">
            <%= yield(:subheading) %>
          </p>
        <% end %>
      </div>

      <%= content_for?(:whole_page_content) ? yield(:whole_page_content) : yield %>
    </div>
  </div>
<% end %>

<%= render template: "layouts/application" %>