}
.text-gray-900{
  color: #222222
}
.text-gray-700{
  color: #515151
}
.no-underline{
  text-decoration: none
}
.btn{
  display: inline-block;
  padding: 16px 32px;
  border-radius: 6px;
  font-weight: 600
}
.btn:focus{
  outline: 2px solid transparent;
  outline-offset: 2px
}
.btn{
  text-decoration: none;
  cursor: pointer
}
.btn-primary{
  background-color: #1e43fc;
  color: #f7f7f7
}
.prose a{
  color: #1e43fc;
  text-decoration: underline
}
