<body>
  <% if content_for?(:summary) %>
    <div class="hidden">
      <%= yield(:summary) %>&#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &zwnj;
        &#160;&#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &#847; &zwnj;
        &#160;&#847; &#847; &#847; &#847; &#847;
      </div>
  <% end %>
  <div role="article" aria-roledescription="email" aria-label="<%= message.subject %>" lang="en">
    <table class="w-full font-sans font-normal text-base" cellpadding="0" cellspacing="0" role="presentation">
      <tr>
        <td align="center" class="sm-pt-0 pt-24 pb-24">
          <table class="w-600 bg-gray-050 rounded-xl sm-w-full" cellpadding="0" cellspacing="0" role="presentation">
            <tr>
              <td class="px-48 sm-px-24 pt-32 pb-8">
                <a href="https://postcard.page">
                  <%= image_tag 'logo/email-logo.png', width: 120, alt: 'Postcard' %>
                </a>
              </td>
            </tr>
            <tr>
              <td align="center">
                <table class="w-full" cellpadding="0" cellspacing="0" role="presentation">
                  <tr>
                    <td class="text-gray-900 text-base text-left px-48 sm-px-24 leading-20">
                      <div class="prose">
                        <%= content_for?(:content) ? yield(:content) : yield %>
                      </div>

                      <% if content_for?(:button_label) and content_for?(:button_link) %>
                      <div class="leading-full mt-24">
                        <a href="<%= yield :button_link %>" class="btn btn-primary">
                          <!--[if mso]><i style="letter-spacing: 24px; mso-font-width: -100%; mso-text-raise:30px;">&#8202;</i><![endif]-->
                          <span style="mso-text-raise: 16px;"><%= yield :button_label %></span>
                          <!--[if mso]><i style="letter-spacing: 24px; mso-font-width: -100%;">&#8202;</i><![endif]-->
                        </a>
                      </div>
                      <% end %>
                    </td>
                  </tr>
                  <tr>
                    <td class="h-32"></td>
                  </tr>
                  <tr>
                    <td class="text-left text-gray-700 text-xs px-48 pb-16 sm-px-24">
                      <%= render 'layouts/mail/legalese' %>
                    </td>
                  </tr>
                </table>
              </td>
            </tr>
          </table>
        </td>
      </tr>
    </table>
  </div>
