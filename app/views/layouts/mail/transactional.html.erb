  padding-bottom: 24px;
}
.pt-16{
  padding-top: 16px;
}
.rounded-xl{
  border-radius: 12px;
}
.h-32{
  height: 32px
}
.w-full{
  width: 100%
}
.w-600{
  width: 600px
}
.bg-gray-050{
  background-color: #f7f7f7
}
.px-48{
  padding-left: 48px;
