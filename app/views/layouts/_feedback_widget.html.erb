<%= form_with(model: @feedback, class: "flex flex-col", data: {controller: 'submit'}) do |f| %>
  <%= f.hidden_field :path, value: request.referrer ? URI.parse(request.referrer).request_uri : nil %>
  <%=
    f.text_area :message,
      placeholder: "Feedback?",
      rows: 3,
      minlength: 3,
      data: {
        gramm: false,
        gramm_editor: false,
        'enable-grammarly': false,
      },
      spellcheck: false,
      class: "peer h-12 w-64 resize-none border-0 bg-transparent p-2 text-sm transition-all duration-100 placeholder-shown:h-9 placeholder-shown:w-24 focus:h-12 focus:w-64 outline-none focus:outline-none outline-0 placeholder-shown:text-center focus:placeholder-shown:text-left focus:ring-0 placeholder:text-sm placeholder:text-gray-700 focus:placeholder:text-gray-500 cursor-pointer focus:cursor-text"
  %>
  <div class="flex items-center justify-between overflow-hidden p-2 text-sm font-medium opacity-100 transition-all duration-100 peer-placeholder-shown:h-0 peer-placeholder-shown:w-0 peer-placeholder-shown:p-0 peer-placeholder-shown:opacity-100 peer-focus:flex peer-focus:h-auto peer-focus:w-auto peer-focus:p-2 peer-focus:opacity-100">
    <button class="text-accent-if-contrast text-xs py-1 px-2 ">Cancel</button>
    <%= f.submit "Send feedback",
      class: "btn btn-primary btn-small"
    %>
  </div>
<% end %>
